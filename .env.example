NODE_ENV=development
PORT=4000

# Database
POSTGRES_URL=postgresql://...
POSTGRES_REPLICA_URLS=postgresql://... # optional, comma-separated list
POSTGRES_POOL_MAX=10 # optional
POSTGRES_POOL_IDLE_TIMEOUT_MS=10000 # optional
POSTGRES_POOL_CONNECTION_TIMEOUT_MS=2000 # optional
POSTGRES_POOL_STATS_INTERVAL_MS=0 # optional, set >0 to log pool stats

# Redis
REDIS_URL=redis://...

# Auth (Privy)
PRIVY_APP_ID=...
PRIVY_VERIFICATION_KEY=...

# Chat grants
CHAT_GRANT_SECRET=...

# AI
OPENAI_API_KEY=sk-...
DOCS_VECTOR_STORE_ID=... # optional
OPENAI_REQUEST_TIMEOUT_MS=30000 # optional

# Farcaster / Neynar
NEYNAR_API_KEY=... # optional (required for getCast tool)
NEYNAR_REQUEST_TIMEOUT_MS=8000 # optional

# Self-hosted mode (optional)
SELF_HOSTED_MODE=false
SELF_HOSTED_DEFAULT_ADDRESS=0x0000000000000000000000000000000000000000
SELF_HOSTED_SHARED_SECRET=

# Optional
DEBUG_CHAT=false
DEBUG_HTTP=false
CHAT_ALLOWED_ORIGINS=https://co.build,https://www.co.build
SOURCE_CODE_URL=https://github.com/cobuildwithus/chat-api # optional, shown at /source
RATE_LIMIT_ENABLED=false # optional
RATE_LIMIT_MAX=30 # optional
RATE_LIMIT_WINDOW_MS=60000 # optional
COBUILD_AI_CONTEXT_TIMEOUT_MS=7000 # optional
